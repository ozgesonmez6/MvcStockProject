@model MvcProject.Models.Entity.Categories
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using(Html.BeginForm("Update", "Category", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.LabelFor(m=>m.CategoryID)
                    @Html.TextBoxFor(m=>m.CategoryID, new {@class="form-control"})

                    <br />

                    @Html.LabelFor(m=>m.CategoryName)
                    @Html.TextBoxFor(m=>m.CategoryName, new {@class="form-control"})
                </div>
                <div>
                    <button class="btn btn-success">Update Category</button>
                </div>
            }
